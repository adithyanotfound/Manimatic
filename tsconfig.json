{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017", "dom" , "dom.iterable"],
    "module": "commonjs", // <-- CHANGED BACK TO COMMONJS
    "rootDir": "./",
    "moduleResolution": "node", // <-- CHANGED THIS from "nodenext" to "node" (standard Node resolution)
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "public/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}